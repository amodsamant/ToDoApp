<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_todo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.todoapp.EditTodoActivity">

    <TextView
        android:text="Edit the todo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvTodo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tvTodo"
        android:layout_alignParentStart="true"
        android:id="@+id/etTodo"
        />

    <TextView
        android:text="Priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priorityTextView"
        android:layout_below="@+id/etTodo"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveEdit"
        android:onClick="saveTodo"
        android:layout_centerVertical="true"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/priorityTextView"
        android:layout_alignParentStart="true">
    <RadioButton
        android:text="Low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lowPriority"/>

    <RadioButton
        android:text="Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediumPriority" />

    <RadioButton
        android:text="High"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highPriority" />

    </RadioGroup>


</RelativeLayout>
