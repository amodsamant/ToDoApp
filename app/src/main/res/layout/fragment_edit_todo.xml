<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_edit_todo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/background">

    <TextView
        android:text="@string/task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTodo"
        android:layout_marginTop="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etTodo"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView
        android:text="@string/priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/priorityTextView"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RadioGroup
        android:id="@+id/priorityGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
        android:text="Low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lowPriority"
        android:checked="true"/>

        <RadioButton
        android:text="Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediumPriority" />

    <RadioButton
        android:text="High"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highPriority" />

    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:id="@+id/dueDateButton"
            android:text="@string/change_due_date"
            android:theme="@style/AppTheme.Button"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/due"
            android:text= "@string/due"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dueDate"
            android:gravity="center"
            android:text="@string/today"
            android:layout_alignBottom="@+id/dueDateButton"
            android:layout_alignTop="@+id/due"
            android:layout_toEndOf="@+id/due"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

       <Button
            android:id="@+id/saveEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveTodo"
            android:layout_centerVertical="true"
            android:text="@string/save"
           android:theme="@style/AppTheme.Button"/>

        <Button
            android:id="@+id/cancelEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancelEdit"
            android:layout_centerVertical="true"
            android:text="@string/cancel"
            android:theme="@style/AppTheme.Button"/>

   </LinearLayout>
</LinearLayout>
